<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.csc325.csc325.Controllers.searchController" style="-fx-background-color: #f2f2f2;">
    <!-- Smoke Grey Background -->
    <VBox style="-fx-background-color: #ddd;">
        <!-- Existing content -->
        <HBox alignment="TOP_RIGHT" styleClass="header">
            <!-- Profile Picture Icon -->
            <ImageView fitWidth="50" fitHeight="50"> <!-- Set your desired width and height -->
                <image>
                    <Image url="https://th.bing.com/th/id/OIP.NqY3rNMnx2NXYo3KJfg43gAAAA?rs=1pid=ImgDetMain" />
                </image>
            </ImageView>
        </HBox>


        <HBox alignment="CENTER" styleClass="header">
            <!-- Profile Picture Icon -->

            <Label text="Job Search" styleClass="header-label" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="searchField" promptText="Search Jobs" />
            <Button text="Search" onAction="#searchJobs" />
        </HBox>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="10" alignment="CENTER" fx:id="jobListingsContainer">

            </VBox>
        </ScrollPane>
    </VBox>
</VBox>